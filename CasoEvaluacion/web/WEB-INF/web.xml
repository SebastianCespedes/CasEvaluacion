<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>controladores.ControladorUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorPrestamo</servlet-name>
        <servlet-class>controladores.ControladorPrestamo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorMulta</servlet-name>
        <servlet-class>controladores.ControladorMulta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/ControladorUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorPrestamo</servlet-name>
        <url-pattern>/ControladorPrestamo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorMulta</servlet-name>
        <url-pattern>/ControladorMulta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
